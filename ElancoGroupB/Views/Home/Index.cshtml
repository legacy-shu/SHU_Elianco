@model UserViewModel
<!doctype html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <meta name="" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>


<body>

<div class="banner-fluid">
    <div class="bgImage-fluid">
        <img src="images/image3.png" alt="bg" style="width:100%;">
    </div>
    @{
        ViewData["Title"] = "Home Page";
    }
    <div class="header-fluid">

    </div>
    <div class="text-center-fluid">
        <h1 class="display-4">YOUR PET AND YOU!!</h1>
        <p class="display-5">Welcome To the Elanco Rebate Processes.</p>
        <h2>Obtaining A Rebate</h2> 
    </div>

    <form class="form" method="post" action="" enctype="multipart/form-data">
        <div class="buttons-fluid">
            <input type="file" name="imagepath"/><br/>
        </div>
        <div class="submitButton-fluid">
            <input asp-page-handler="Upload" type="submit" value="Upload"/>
        </div>
    </form>


    <div class="form1">
        <h1 class="PersonInfo">
            Your Information
        </h1>
        <form>
            <label for="fname">First Name:</label>
            <input type="text" id="fname" name="fname" asp-for="@Model.Purchase.Clinic.Name">

            <label for="lname">Last Name:</label>
            <input type="text" id="lname" name="lname" asp-for="@Model.Purchase.Clinic.Address">

            <label for="address">Address:</label>
            <input type="text" id="address" name="address" asp-for="@Model.Purchase.Clinic.Phone">

            <label for="city">City:</label>
            <input type="city" id="city" name="city" asp-for="@Model.Purchase.Clinic.Zip">

            <label for="State">State:</label>
            <input type="State" id="State" name="State" asp-for="@Model.Purchase.Pet.Name">

            <label for="Zipcode">Zip Code:</label>
            <input type="Zipcode" id="Zipcode" name="Zipcode" asp-for="@Model.Purchase.InvoiceNumber">

            <label for="Phone">Phone:</label>
            <input type="text" id="Phone" name="Phone" asp-for="@Model.Purchase.TotalAmount">

            <label for="Email">Email</label>
            <input type="text" id="Email" name="Email" asp-for="@Model.Purchase.Date">

            <label for="confirmEmail">Confirm Email:</label>
            <input type="text" id="confirmEmail" name="confirmEmail">
        </form>
        <div class="PetsInfo">
            <h2 class="PetHeading">Your Pet's Information</h2>
            <form>
                <label for="petName">Pet Name:</label>
                <input type="text" id="petName" name="petName">

            </form>
        </div>
    </div>

    <div class="footerImage">
        <img src="images/imaage2.png" alt="footer image" style="width:100%;">
    </div>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>


