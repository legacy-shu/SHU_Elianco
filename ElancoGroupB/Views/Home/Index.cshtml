@model Purchase
<!doctype html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <meta name="" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>


<body>

<div class="banner">
    <div class="bgImage">
       <img src="images/bg.png" alt="bg" style="width:100%;"> 
    </div>
    @{
        ViewData["Title"] = "Home Page";
    }
    <div class="header">

    </div>
    <div class="text-center">
        <h1 class="display-4">YOUR PET AND YOU!!</h1>
        <p class="display-5">Welcome To the Elanco Rebate Processes.</p>
        <h2>Obtaining A Rebate</h2>
        <h3>To obtain a rebate please upload a picture of your Receipt or Invouce via a device. Once this step has been completed please upload the image by 'clicking submit'. 
            This will extract key detils from your Receipt or invoice, this can also be edited if there are errors from extraction. </h3>
    </div>

    <div class="buttons">
        <form action="/Index">
            <input type="file" id="myFile" name="filename">
        </form>
    </div> 
    
     <div class="submitButton">
            <form method="post">
                <input type="Submit"/>
            </form>
    </div>

    <div class="form1">
        <h1 class="PersonInfo">
            Your Information
        </h1>
        <form>
            <label for="fname">First Name:</label>
            <input type="text" id="fname" name="fname" asp-for="@Model.Clinic.Name">

            <label for="lname">Last Name:</label>
            <input type="text" id="lname" name="lname">

            <label for="address">Address:</label>
            <input type="text" id="address" name="address">

            <label for="city">City:</label>
            <input type="city" id="city" name="city">

            <label for="State">State:</label>
            <input type="State" id="State" name="State">

            <label for="Zipcode">Zip Code:</label>
            <input type="Zipcode" id="Zipcode" name="Zipcode">

            <label for="Phone">Phone:</label>
            <input type="text" id="Phone" name="Phone">

            <label for="Email">Email</label>
            <input type="text" id="Email" name="Email">

            <label for="confirmEmail">Confirm Email:</label>
            <input type="text" id="confirmEmail" name="confirmEmail">
        </form>
        <div class="PetsInfo">
            <h2 class="PetHeading">Your Pet's Information</h2>
            <form>
                <label for="petName">Pet Name:</label>
                <input type="text" id="petName" name="petName">

            </form>
        </div>
    </div>
    
    <div class="footerImage">
        <img src="images/imaage2.png" alt="footer image" style="width:100%;">
    </div>

</div>
</body>
</html>


